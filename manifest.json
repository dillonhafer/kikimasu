{
  "name" : "Prop Open",
  "version" : "0.0.4",
  "description" : "Props open Pandora's box.",
  "background" : {
    "scripts": ["background.js"]
  },
  "page_action" :
  {
    "default_icon" : "prop-open-19.png",
    "default_title" : "Unleash the music!"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["contentscript.js"],
      "matches" : ["http://www.pandora.com/*", "https://www.pandora.com/*"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "prop-open-48.png",
    "128" : "prop-open-128.png"
  },
  "manifest_version": 2,
  "permissions": [
  		"http://www.pandora.com/*",
  		"https://www.pandora.com/*"
  	]
}